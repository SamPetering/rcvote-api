{
  "name": "rcvote-api",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "build": "pnpm build:ts",
    "start": "node dist/server.js",
    "build:ts": "tsc -p tsconfig.json",
    "watch:ts": "tsc -w",
    "dev": "pnpm build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"pnpm:watch:ts\" \"pnpm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node dist/db/migrate.js",
    "db:seed": "node dist/db/seed.js"
  },
  "author": "Sam Petering",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/oauth2": "^7.9.0",
    "@fastify/passport": "^2.5.0",
    "@fastify/secure-session": "^7.5.1",
    "@fastify/sensible": "^5.0.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.32.1",
    "drizzle-zod": "^0.5.1",
    "fastify": "^4.26.1",
    "fastify-cli": "^6.3.0",
    "fastify-plugin": "^4.0.0",
    "fastify-type-provider-zod": "^2.0.0",
    "lodash": "^4.17.21",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.12.0",
    "postgres": "^3.4.4",
    "prettier": "^3.3.3",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.1.0",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.23.1",
    "fastify-tsconfig": "^2.0.0",
    "nodemon": "^3.1.4",
    "pino-pretty": "^11.2.2",
    "typescript": "^5.5.4"
  }
}
